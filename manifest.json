{
  "manifest_version": 3,
  "name": "Jira In Progress Time Tracker",
  "version": "3.1",
  "description": "Calculates the time spent in the 'In Progress' status for Jira tickets.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  }
}